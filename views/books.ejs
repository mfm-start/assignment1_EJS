<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>EJS Books</h1>
    <div class="container">
        <div class="row">
            <table class="table table-hover border border-5">
                <thead>
                    <tr >
                        <th class="border border-5" scope="col">Id</th>
                        <th class="border border-5" scope="col">Title</th>
                        <th class="border border-5" scope="col">Author</th>
                        <th class="border border-5" scope="col">Year Written</th>
                        <th class="border border-5" scope="col">Edition</th>
                        <th class="border border-5" scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% book_list.forEach(book => { %>

                        <tr class="link" href="/books/<%= book.id %>">
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                  href="/books/<%= book.id %>">
                                   <div><%= book.id %></div> 
                                </a>
                            </td>
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                href="/books/<%= book.id %>">
                                    <div><%= book.title %></div>
                                </a>
                            </td>
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                  href="/books/<%= book.id %>">
                                    <div><%= book.author %></div>
                                </a>
                            </td>
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                  href="/books/<%= book.id %>">
                                    <div><%= book.year_written %></div>
                                </a>
                            </td>
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                  href="/books/<%= book.id %>">
                                    <div><%= book.edition %></div>
                                </a>
                            </td>
                            <td class="border border-5">
                                <a class="link-dark link-underline link-underline-opacity-0" 
                                  href="/books/<%= book.id %>">
                                    <div><%= book.price %></div>
                                </a>
                            </td>
                            
                        </tr>
                    <%}) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>